<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ECECEC"
    android:id="@+id/card_user_search"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0.3dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    card_view:cardUseCompatPadding="true"
    >
    <!--android:layout_marginTop="0.5dp"-->
    <!--card_view:cardCornerRadius="0dp"-->
    <!--card_view:cardElevation="2dp"-->
    <!--card_view:cardMaxElevation="8dp"-->
    <!--android:layout_marginTop="4dp"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="8dp"
            android:paddingTop="15dp"
            android:paddingRight="8dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/card_holder">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_notification_author_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ali"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFF"
                android:adjustViewBounds="false"
                android:baselineAlignBottom="false"
                android:cropToPadding="false" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="15sp"
                    android:textColor="#5d5c5c"
                    android:paddingRight="16dp"
                    android:id="@+id/card_notification_user_title"
                    android:fontFamily="@string/abc_font_family_title_material"
                    android:paddingLeft="12dp"
                    android:paddingTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comment"
                    android:id="@+id/card_notification_user_content"
                    android:paddingLeft="12dp"
                    android:paddingRight="16dp"
                    android:textSize="14sp"
                    android:fontFamily="@string/abc_font_family_subhead_material" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8 days ago"
                android:id="@+id/card_notification_date"
                android:gravity="right" />

        </LinearLayout>
</android.support.v7.widget.CardView>